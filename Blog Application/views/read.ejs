<header class="masthead" style="background-image: url('images/headerimg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1><%= post.blogTitle %></h1>
                </div>
            </div>
        </div>
    </div>
</header>

<article class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <!-- <div class="col-md-10 col-lg-8 col-xl-7"> -->
                <p><%= post.blogContent %></p>
            <!-- </div> -->
        </div>

        <form action="/delete" method="POST">
            <input type="hidden" name="blogID" value= <%= post.blogID %>>
            <input type="submit" class="btn btn-primary text-uppercase" value="Delete Post">
          </form>  
    
    
        <form action="/update" method="POST">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <input type="hidden" name="blogID" value= <%= post.blogID %>>
            </div>
            <br>
            <div class="col-md-10 col-lg-8 col-xl-7">
                <input type="submit" class="btn btn-primary text-uppercase" value="Update Post">
            </div>
            
            
            
        </form>     
    </div>
</article>

