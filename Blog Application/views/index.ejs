<header class="masthead" style="background-image: url('images/headerimg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>BLOG</h1>
                </div>
            </div>
        </div>
    </div>
</header>






<div class="container px-4 px-lg-5">
    <% posts.forEach(post => { %>
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            
                <div class="post-preview">
                <input type="hidden" name="blogID" value= <%= post.blogID %>>
                <h2 class="post-title" ><%= post.blogTitle %></h2>
                    

                    <div class="d-flex justify-content-end mb-4"></div>
                    <form action="/read" method="POST" type="submit">
                        
                        <input type="hidden" name="blogID" value= <%= post.blogID %>>
                        <input type="submit" class="btn btn-primary text-uppercase"  value="Read Post"  >
                    </form>
                    </div>
   
                </div>
                </div>
                <!-- Divider-->
                <hr class="my-4" />
                <% }) %>
                <!-- Pager-->

            </div>
        </div>
    </div>
    <%- include('partials/footer') %>    

